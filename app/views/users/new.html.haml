- provide(:title, I18n.t('users.registrations.title'))
%h3.text-center.mt-5=I18n.t('users.registrations.title')
.row
  .col-md-4.offset-md-4
    = form_for(@user) do |f|
      .form-group.row{class: @user.errors[:name].present? && 'has-danger'}
        = f.label :name, class: 'form-control-label'
        = f.text_field :name, class: 'form-control'
        = errors_for(@user, :name)
      .form-group.row{class: @user.errors[:email].present? && 'has-danger'}
        = f.label :email, class: 'form-control-label'
        = f.email_field :email, class: 'form-control'
        = errors_for(@user, :email)
      .form-group.row{class: @user.errors[:password].present? && 'has-danger'}
        = f.label :password, class: 'form-control-label'
        = f.password_field :password, class: 'form-control'
        = errors_for(@user, :password)
      .form-group.row{class: @user.errors[:password_confirmation].present? && 'has-danger'}
        = f.label :password_confirmation, class: 'form-control-label'
        = f.password_field :password_confirmation, class: 'form-control'
        = errors_for(@user, :password_confirmation)
      .form-group.row
        = f.submit I18n.t('users.registrations.action'), class: "btn btn-primary btn-block"