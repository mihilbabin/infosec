- provide(:title, I18n.t('users.sessions.title'))
%h3.text-center.mt-5=I18n.t('users.sessions.title')
.row
  .col-md-4.offset-md-4
    = form_with scope: :session, url: sessions_path, local: true do |f|
      .form-group.row
        = f.label I18n.t('activerecord.attributes.user.email'), class: 'form-control-label'
        = f.text_field :email, class: 'form-control'
      .form-group.row
        = f.label I18n.t('activerecord.attributes.user.password'), class: 'form-control-label'
        = f.password_field :password, class: 'form-control'
      .form-group.row
        = f.submit I18n.t('users.sessions.action'), class: "btn btn-primary btn-block"
.row
  .col-md-4.offset-md-4
    %p
      = t("users.sessions.no_account")
      = link_to t("users.registrations.title"), new_user_path